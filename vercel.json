{
  "builds": [
    {
      "src": "edagames/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "edagames/wsgi.py"
    }
  ],
  "rewrites": [
    {"source": "/static/(.*)", "destination": "/static/$1"},
    {"source": "/media/(.*)", "destination": "/media/$1"},
    {"source": "/(.*)", "destination": "/index.html"}
  ]
}